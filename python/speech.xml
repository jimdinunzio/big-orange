<!-- Leaf's Grammar Rules:
     Return one name combined with one phrase as a single string.
     For example, "Robot this is Bruce" -->


<GRAMMAR LANGID="409">

<DEFINE>
    <ID NAME="PERSON" VAL="1"/>
</DEFINE>

<RULE NAME="RobotCommands" TOPLEVEL="ACTIVE">

	<LIST>
	   	<P>orange</P>
		<P>what's your name</P>
		<P>what is your name</P>
		<P>who are you</P>
		<P>stop</P>
	</LIST>

	<O>
		<LIST>
    		<P>ask google</P>
			<P>resume listening</P>
			<P>start listening</P>
			<P>start listening again</P>
			<P>pause listening</P>
			<P>stop listening</P>
			<P>what</P>
			<P>what did you say</P>
			<P>please repeat what you just said</P>
			<P>stop</P>
			<P>
    			<P>this is</P>
    			<RULEREF NAME="person"/>
    		</P>
			<P>goodbye</P>
			<P>who are you with</P>
			<P>how are you</P>
			<P>how are you feeling</P>
			<P>where are you</P>
			<P>challenge, phase one</P>
			<P>what time is it</P>
			<P>challenge phase one</P>
			<P>wake up</P>
			<P>go to sleep</P>
			<P>
				<P>+go</P>
				<L>
				<P>forward</P>
				<P>backward</P>
				<P>right</P>
				<P>left</P>
				</L>
				<O>
					<P>at</P>
					<RULEREF NAME="angle"/>
					<P>degrees</P>
				</O>
				<P><RULEREF NAME="distance"/></P>
				<L>
					<P>centimeters</P>
					<P>inches</P>
					<P>yards</P>
					<P>meters</P>
					<P>centimeter</P>
					<P>inch</P>
					<P>yard</P>
					<P>meter</P>
				</L>
			</P>
			<P>list your threads</P>
			<P>recover localization</P>
			<P>close your eyes</P>
			<P>open your eyes</P>
			<P>
				<L>
					<P>initiate</P>
					<P>begin</P>
				</L>
				<L>
					<P>+shut +down</P>
					<P>+shutdown</P>
				</L>
			</P>
			<P>+shutdown +system</P>
			<P>status</P>
			<P>clear map</P>
			<P>load map</P>
			<P>save map</P>
			<P>motion</P>
			<P>voltage</P>
			<P>battery</P>
			<P>
				<L>
					<P>enable</P>
					<P>disable</P>
				</L>
				<P>map updating</P>
			</P>
			<P>go home</P>
			<P>go recharge</P>
			<P>go to dock</P>	  
			<P>take a picture</P>
			<P>
    			<P>bring this to</P>
		    	<RULEREF NAME="person"/>
    			<O>
        			<P>in the</P>
        			<RULEREF NAME="location"/>
        		</O>
			</P>
			<P>
				<P>set speed</P>
				<L>
					<P>low</P>
					<P>medium</P>
					<P>high</P>
				</L>
			</P>
			<P>what do you see</P>
			<P>
				<P>identify this</P>
				<L>
					<P>bird</P>
					<P>insect</P>
					<P>plant</P>
				</L>
			</P>
			<P>clear windows</P>
			<P>
				<P>+go +to</P>
				<O>the</O>
				<RULEREF NAME="location"/>
			</P> 
			<P>
				<L>
					<P>turn</P>
					<P>rotate</P>
				</L>
				<L>
					<P>around</P>
					<P>
						<P><RULEREF NAME="angle"/></P>
						<P>degrees</P>
						<O>clockwise</O>
					</P>
				</L>
			</P>
  		</LIST>
	</O>
</RULE>

<RULE NAME="person">
    <L PROPNAME="person" PROPID="PERSON">
        <P VAL="1">jim</P>
        <P VAL="2">evelyn</P>
    </L>
</RULE>

<RULE NAME="location">
	<L>
    	<P>kitchen</P>
		<P>kitchen nook</P>
		<P>living room</P>
		<P>back slider</P>
		<P>dining area</P>
		<P>office</P>
		<P>front door</P>
		<P>end of hall</P>
	</L>
</RULE>

<RULE NAME="digit">
	<L>
		<P>zero</P>
		<P>one</P>
		<P>two</P>
		<P>three</P>
		<P>four</P>
		<P>five</P>
		<P>six</P>
		<P>seven</P>
		<P>eight</P>
		<P>nine</P>
	</L>
</RULE>

<RULE NAME="distance">
	<L>
		<RULEREF NAME="digit"/>
		<P>ten</P>
	</L>
	<O>
		<P>point</P>
		<RULEREF NAME="digit"/>
		<O><RULEREF NAME="digit"/></O>
	</O>
</RULE>

<RULE NAME="angle">
	<O>
		<L>
			<P>negative</P>
			<P>minus</P>
		</L>
	</O>
	<L>
		<P>ten</P>
		<P>fifteen</P>
		<P>thirty</P>
		<P>sixty</P>
		<P>forty five</P>
		<P>ninety</P>
		<P>one thirty five</P>
		<P>one eighty</P>
		<P>two seventy</P>
		<P>three sixty</P>
	</L>
</RULE>
</GRAMMAR>